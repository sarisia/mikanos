    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Attach to QEMU",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/src/kernel/kernel.elf",
            "args": [],
            "stopAtEntry": true,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerServerAddress": "localhost:12345",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}
